<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.dominikbilik.smartgrid</groupId>
    <artifactId>SmartGrid</artifactId>
    <packaging>pom</packaging> <!-- when the code is packaged, weâ€™re not expecting to see a target JAR/WAR produced for the parent package -->
    <version>1.0-SNAPSHOT</version>

    <modules>
        <module>measured-data-service</module>
        <module>file-service</module>
        <module>data-input-service</module>
        <module>translator-service</module>
        <module>device-service</module>
        <module>location-service</module>
        <module>auth-service</module>
        <module>gateway</module>
        <module>config-server</module>
        <module>discovery-server</module>
    </modules>

    <developers>
        <developer>
            <id>Dominik355</id>
            <name>Dominik Bilik</name>
            <email>dominikbilik4@gmail.com</email>
            <url>https://github.com/Dominik355</url>
        </developer>
    </developers>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <spring-boot.version>2.6.0</spring-boot.version>
        <spring-cloud.version>2021.0.0</spring-cloud.version>
        <spring.boot.maven.plugin.version>2.6.0</spring.boot.maven.plugin.version>
        <spring-cloud-netflix.version>3.1.0</spring-cloud-netflix.version>
        <guava.version>31.0.1-jre</guava.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-dependencies</artifactId>
                <version>${spring-boot.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <dependency>
                <groupId>org.springframework.cloud</groupId>
                <artifactId>spring-cloud-dependencies</artifactId>
                <version>${spring-cloud.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <dependency>
                <groupId>org.springframework.cloud</groupId>
                <artifactId>spring-cloud-netflix-dependencies</artifactId>
                <version>${spring-cloud-netflix.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-maven-plugin</artifactId>
                    <version>${spring.boot.maven.plugin.version}</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

</project>